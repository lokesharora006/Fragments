<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statusFragment"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="14dp"
        android:elevation="30dp"
        app:cardCornerRadius="20dp"
        >


        <!-- Horizontal LinearLayout for text content (Name and Price) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- ImageView for the drink image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/daru"
                />
            <!-- TextView for the drink name -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Blenders"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold"
                />

            <!-- TextView for the price -->
            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹999"
                android:padding="4dp"
                android:layout_marginStart="10dp"
                android:textColor="#887D7D"
                android:textSize="24sp"
                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>


